@inherits ParameterLayout<KeyViewModel>

<button type="button" tabindex="-1" onclick="@ViewModel.SubmitKeyCommand.Bind()" class="flex items-center justify-center text-xl m-0.5 min-h-10 p-0.5 uppercase rounded @(SelectCss()) !cursor-pointer @(ViewModel.IsWide ? "flex-[2_1_0%]" : "flex-1") border-[3px]">
    @ViewModel.Text
</button>

@code
{
    public string SelectCss()
    {
        if (ViewModel.Hint is Hints.Correct)
        {
            return "hint-key-correct";
        }

        if (ViewModel.Hint is Hints.Elsewhere)
        {
            return "hint-key-elsewhere";
        }

        if (ViewModel.Hint is Hints.Incorrect)
        {
            return "hint-key-incorrect";
        }

        return "hint-key-none";
    }
}