@inherits ParameterLayout<CellViewModel>

<div class="pallete-cell border-[@(ViewModel.Width is > 7 ? "1" : "3")px]">
    <div class="pallete-cell-base pallete-cell-character @(SelectCss())">
        @ViewModel.Text
    </div>
</div>

@code
{
    public string SelectCss()
    {
        if (ViewModel.Hint is Hints.Duplicate)
        {
            return ViewModel.IsHunch ? "hint-hunch-duplicate" : "hint-cell-duplicate";
        }

        if (ViewModel.Hint is Hints.Correct)
        {
            return ViewModel.IsHunch ? "hint-hunch-correct" : "hint-cell-correct";
        }

        if (ViewModel.Hint is Hints.Elsewhere)
        {
            return ViewModel.IsHunch ? "hint-hunch-elsewhere" : "hint-cell-elsewhere";
        }

        if (ViewModel.Hint is Hints.Incorrect)
        {
            return ViewModel.IsHunch ? "hint-hunch-wrong" : "hint-cell-incorrect";
        }

        return ViewModel.IsHunch ? "hint-hunch-none" : "hint-cell-none";
    }
}