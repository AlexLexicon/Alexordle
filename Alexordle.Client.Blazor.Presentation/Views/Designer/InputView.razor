@inherits ParameterLayout<InputViewModel>

<div>
    <div class="designer-textinput-section">
        @ViewModel.Label
    </div>
    @if (ViewModel.IsInputVisible)
    { 
        <TextInput @bind-Text="@ViewModel.Text" @bind-Text:after="@ViewModel.TextChangedCommand.BindAfter()" Validator="@ViewModel.TextValidator" />
    }
</div>